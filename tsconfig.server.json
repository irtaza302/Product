{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2022",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "allowJs": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "types": ["@vercel/node"]
  },
  "include": ["api/**/*", "src/types/**/*", "src/constants/**/*"],
  "exclude": ["node_modules"]
}