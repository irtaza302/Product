{
  "compilerOptions": {
    "target": "ES2020",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "rootDir": ".",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@constants/*": ["./public/constants/*"]
    },
    "allowJs": true,
    "resolveJsonModule": true
  },
  "include": [
    "src/server/**/*", 
    "src/models/**/*", 
    "src/types/**/*", 
    "public/constants/**/*"
  ],
  "ts-node": {
    "esm": true
  }
}