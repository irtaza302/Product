{
  "compilerOptions": {
    "target": "ES2020",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "baseUrl": ".",
    "paths": {
      "@constants/*": ["src/public/constants/*"]
    }
  },
  "include": ["src/server/**/*", "src/models/**/*", "src/types/**/*", "src/constants/**/*"],
  "ts-node": {
    "esm": true
  }
}